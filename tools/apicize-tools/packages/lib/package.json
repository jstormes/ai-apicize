{
  "name": "@apicize/lib",
  "version": "1.0.0",
  "description": "Core library for Apicize tools - TypeScript types, utilities, and runtime support for API testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "cd ../.. && npm run test:lib",
    "lint": "echo 'Linting handled at root level'",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "npm run build"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apicize/tools.git",
    "directory": "packages/lib"
  },
  "bugs": {
    "url": "https://github.com/apicize/tools/issues"
  },
  "homepage": "https://github.com/apicize/tools/tree/main/packages/lib#readme",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.5.0",
    "glob": "^10.3.10",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "apicize",
    "api-testing",
    "api-test",
    "typescript",
    "library",
    "testing-tools",
    "test-automation",
    "mocha",
    "chai"
  ],
  "author": "Apicize Tools",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false
}
