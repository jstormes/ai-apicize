{
  "name": "@jstormes/apicize-tools",
  "version": "1.0.0",
  "description": "CLI tools for working with .apicize API test files - convert between .apicize and TypeScript/Mocha/Chai tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "apicize": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "lint": "echo 'Linting handled at root level'",
    "clean": "rimraf dist",
    "dev": "tsx src/cli.ts",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "prepare": "npm run build",
    "version": "npm run lint && git add -A",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apicize/tools.git"
  },
  "bugs": {
    "url": "https://github.com/apicize/tools/issues"
  },
  "homepage": "https://github.com/apicize/tools#readme",
  "dependencies": {
    "@jstormes/apicize-lib": "^1.0.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/uuid": "^10.0.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "preferGlobal": true,
  "keywords": [
    "apicize",
    "cli",
    "api-testing",
    "api-test",
    "testing",
    "typescript",
    "mocha",
    "chai",
    "test-automation",
    "api-automation",
    "rest-api",
    "graphql"
  ],
  "author": "Apicize Tools",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
