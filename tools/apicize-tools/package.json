{
  "name": "apicize-tools-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Apicize tools - convert .apicize files to/from TypeScript Mocha/Chai tests",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:lib": "jest packages/lib/src",
    "test:validation": "jest packages/lib/src/validation",
    "test:integration": "jest --selectProjects integration",
    "test:performance": "jest --selectProjects performance",
    "test:unit": "jest --selectProjects unit",
    "test:all": "jest",
    "test:package": "npm run pack:test && npm run install:test",
    "benchmark": "node scripts/performance-benchmark.js",
    "lint": "eslint . --ext .ts",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "verify": "npm run build && npm run test && npm run lint",
    "verify:full": "npm run build && npm run test:all && npm run test:integration && npm run lint",
    "dev": "npm run dev --workspaces --if-present",
    "validate-workbooks": "node scripts/validate-workbooks.js",
    "step-test": "npm run build && npm run validate-workbooks",
    "pack:test": "npm pack --workspaces",
    "install:test": "npm run install:test:local",
    "install:test:local": "cd /tmp && npm init -y && npm install file:${PWD}/apicize-tools-1.0.0.tgz file:${PWD}/apicize-lib-1.0.0.tgz && npx apicize --version",
    "preversion": "npm run verify:full",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run verify:full",
    "publish:dry": "npm publish --dry-run --workspaces",
    "publish:packages": "npm publish --workspaces --access public",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:dry": "standard-version --dry-run",
    "release:first": "standard-version --first-release",
    "pre-release": "bash scripts/pre-release.sh",
    "post-release": "bash scripts/post-release.sh",
    "verify-publish": "bash scripts/verify-publish.sh"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "apicize",
    "api-testing",
    "typescript",
    "mocha",
    "chai",
    "test-automation"
  ],
  "author": "Apicize Tools",
  "license": "MIT"
}
