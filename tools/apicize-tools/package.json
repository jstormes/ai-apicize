{
  "name": "apicize-tools-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Apicize tools - convert .apicize files to/from TypeScript Mocha/Chai tests",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:lib": "jest packages/lib/src",
    "test:validation": "jest packages/lib/src/validation",
    "test:integration": "jest --selectProjects integration",
    "test:performance": "jest --selectProjects performance",
    "test:unit": "jest --selectProjects unit",
    "test:all": "jest",
    "benchmark": "node scripts/performance-benchmark.js",
    "lint": "eslint . --ext .ts",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "verify": "npm run build && npm run test && npm run lint",
    "verify:full": "npm run build && npm run test:all && npm run test:integration && npm run lint",
    "dev": "npm run dev --workspaces --if-present",
    "validate-workbooks": "node scripts/validate-workbooks.js",
    "step-test": "npm run build && npm run validate-workbooks"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "apicize",
    "api-testing",
    "typescript",
    "mocha",
    "chai",
    "test-automation"
  ],
  "author": "Apicize Tools",
  "license": "MIT"
}